
  <div class="item well">
    
    <div class="image_size">
    <% if product.image.nil?  %>
        <img class="img-rounded" src="http://fakeimg.pl/250x100/" alt="no pic!"> 
    <% else  %>
        <%= image_tag product.image %>
    <% end %>
    </div>
    <span class="details hidden">
        
    <table class="table">
        <tr>
          <td>ID: <%= product.id %></td>
        </tr>
        <tr>
          <td>Title: <%= product.title %></td>
        </tr>
        <tr>
            <td>Price: NTD <%= product.price %> </td>
        </tr>
        <tr>
          <td>Description: <%= product.description %></td>
        </tr>
    </table>
        

    </span>

    <p class="title"> <h3><%= product.title %></h3> </p>
    <p class="price">NTD <%= product.price %> </p>
    <p> 
    <%= link_to "assign", assignment_store_path(product), :target => "_blank", class:"btn btn-success" %>
    <a class="btn btn-primary" href="">View details</a>
    </p>
    <p>
    <%= link_to "edit", edit_product_path(product), class:"btn btn-warning" %>
    <%= link_to "destroy", product_path(product), method: "delete", data: { confirm: "sure?" }, class:"btn btn-danger" %>
    </p>


  </div>
