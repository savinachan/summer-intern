
<h1>New Store (<%= @user.name%>)</h1>


<%= form_for [@user, @store] do |f| %>

  <%= f.label :name, "Name" %>
  <%= f.text_field :name %> <br />

 	<%= f.label :tel, "Tel" %>
  <%= f.text_field :tel %> <br /> 

  <%= f.label :address, "Address" %>
  <%= f.text_field :address %> <br />

  <%= f.hidden_field :user_id, :value => @user.id %> <br />

  <%= f.submit class:"btn btn-warning" %>

<%= link_to 'back', user_stores_path(@user), class:"btn btn-info"%>
	
<% end %>
