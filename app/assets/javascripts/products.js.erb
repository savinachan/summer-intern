$(document).ready(function () {

$('.btn-primary').on('click', function(e){
    // 開啟燈箱
    e.preventDefault();
    var ID = $(this).parents().siblings('.details').html();

    $('.dialog-box').children("div").html(ID);
    $('.mask').fadeIn(1000);
    
  });

  $('.dialog-box .close').on('click', function(e){
    // 關閉燈箱
    e.preventDefault();
    $('.mask').fadeOut(1000);
    //removeClass('active');

  });

});



